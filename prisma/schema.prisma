generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pegawai {
  id            Int         @id @default(autoincrement())
  nama          String
  alamat        String
  email         String      @unique
  no_telp       String
  jabatan       String?
  tanggal_lahir DateTime?   @default(now()) @db.Date
  foto_profile  Bytes?
  gaji_pokok    Float
  tunjangan     Float
  potongan_gaji Float
  kehadiran     Int
  cuti          Int
  fasilitas     Fasilitas[]
}

model Fasilitas {
  id             Int     @id @default(autoincrement())
  nama           String
  potongan_biaya Float
  pegawai        Pegawai[]
}

model Admin {
  id        Int         @id @default(autoincrement())
  username  String      @unique
  password  String
}
